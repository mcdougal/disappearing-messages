{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/app/*": ["./src/*"],
      "@/db/*": ["../db/src/*"],
      "@/domain/*": ["../domain/src/*"],
      "@/jobs/*": ["../jobs/src/*"],
    },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    ".eslintrc.js",
    ".next/types/**/*.ts",
    "**/*.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    "postcss.config.js",
  ],
  "exclude": [".next", "node_modules"],
}
