{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ES2023"],
    "module": "node16",
    "moduleResolution": "Node16",
    "paths": {
      "@/common/*": ["../common/src/*"],
      "@/db/*": ["../db/src/*"],
      "@/domain/*": ["./src/*"],
      "@/integrations/*": ["../integrations/src/*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
  },
  "include": ["**/*.d.ts", "**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
