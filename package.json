{
  "name": "disappearing-messages",
  "version": "0.0.1",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "check": "npx npm-check --skip-unused",
    "delta-lint:code": "npm run delta-lint:code --workspaces --if-present",
    "delta-lint:markdown": "markdownlint **/*.md",
    "delta-lint:styles": "stylelint '**/*.scss'",
    "delta-lint": "run-p delta-lint:**",
    "dev": "npm run dev -w @disappearing-messages/app",
    "lint:code": "npm run lint:code --workspaces --if-present",
    "lint:markdown": "markdownlint **/*.md",
    "lint:styles": "stylelint '**/*.scss'",
    "lint": "run-p lint:**",
    "postinstall": "npm run build -w @disappearing-messages/eslint-plugin",
    "prepare": "husky",
    "test": "npm run test --workspaces --if-present",
    "types": "npm run types --workspaces --if-present"
  },
  "devDependencies": {
    "@disappearing-messages/eslint-plugin": "file:./packages/eslint-plugin",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.0.7",
    "jest": "^29.5.0",
    "jest-date-mock": "^1.0.8",
    "lint-staged": "^15.2.0",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.39.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
