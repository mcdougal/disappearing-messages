{
  "name": "disappearing-messages",
  "version": "0.0.1",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "npm run db:migrate && npm run build -w @disappearing-messages/app",
    "check": "npx npm-check --skip-unused",
    "db:migrate": "npm run migrate -w @disappearing-messages/db",
    "delta-lint:code": "npm run delta-lint:code --workspaces --if-present",
    "delta-lint:markdown": "markdownlint **/*.md",
    "delta-lint": "run-p delta-lint:**",
    "dev:db:generate": "npm run generate -w @disappearing-messages/db",
    "dev": "npm run dev -w @disappearing-messages/app",
    "lint:code": "npm run lint:code --workspaces --if-present",
    "lint:markdown": "markdownlint **/*.md",
    "lint": "run-p lint:**",
    "postinstall": "npm run build -w @disappearing-messages/eslint-plugin",
    "prepare": "husky",
    "start": "npm run start -w @disappearing-messages/app",
    "types": "npm run types --workspaces --if-present"
  },
  "devDependencies": {
    "@disappearing-messages/eslint-plugin": "file:./packages/eslint-plugin",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.39.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
