{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": ".build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016"
  },
  "include": [
    ".eslintrc.js",
    "jest.config.js",
    "**/*.js",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [".build", "node_modules"],
  "ts-node": {
    "compilerOptions": {
      "jsx": "react",
      "module": "CommonJS"
    },
    "files": true,
    "transpileOnly": true
  }
}
